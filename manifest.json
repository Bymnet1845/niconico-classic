{
	"manifest_version": 3,
	"name": "ニコニコ動画クラシックスタイル",
	"description": "「帰ってきたニコニコ」の動画視聴ページをリニューアル前風に。機能を若干追加したりもしています。",
	"version": "1.0.1",
	"permissions": ["storage"],

	"icons": {
		"16": "image/icon_16.png",
		"32": "image/icon_32.png",
		"48": "image/icon_48.png",
		"128": "image/icon_128.png"
	},

	"content_scripts": [
		{
			"matches": ["https://www.nicovideo.jp/*"],
			"js": ["script/common.js"],
			"run_at": "document_end"
		}, {
			"matches": ["https://www.nicovideo.jp/my", "https://www.nicovideo.jp/my?*", "https://www.nicovideo.jp/my/", "https://www.nicovideo.jp/user/*"],
			"css": ["style/user-page.css"],
			"run_at": "document_end"
		}, {
			"matches": ["https://www.nicovideo.jp/watch/*"],
			"css": ["style/video-watch-page.css"],
			"js": ["script/video-watch-page.js"],
			"run_at": "document_end"
		}
	],

	"action" :{
		"default_title": "ニコニコ動画クラシックスタイル",
		"default_popup": "popup.html"
	}
}